#!groovy

node {
       stage('Checkout'){
          checkout scm
       }

       stage('Install'){
          sh 'npm install'
       }

       stage('Static check'){
          sh 'eslint *.js routes/*.js'
       }

       stage('Test Unitario'){
          sh 'npm run-script unit-test'
       }

       stage('Test'){
         env.NODE_ENV = "test"
         print "Environment will be : ${env.NODE_ENV}"
         sh 'npm test'

       }

    }
