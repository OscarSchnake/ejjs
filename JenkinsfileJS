#!groovy

node {
       stage('Checkout'){
          checkout scm
       }

       stage('Static check'){
          sh 'eslint *.js routes/*.js'
       }

       stage('Test'){
         env.NODE_ENV = "test"
         print "Environment will be : ${env.NODE_ENV}"
         sh 'node -v'
         sh 'npm prune'
         sh 'npm install'
         sh 'npm test'

       }

    }
